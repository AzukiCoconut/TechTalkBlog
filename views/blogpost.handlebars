<section class="card m-2">
    <header class="d-flex justify-content-between align-items-center p-2 bg-body-secondary">
        <h3>{{title}}</h3>
        <p>Posted by {{user.name}} on {{created_on}}</p>
    </header>
    <div class="card-body">{{text}}</div>
</section>
<section>
    <h3>Comments</h3>
    {{#each comments as |comment|}}
    {{> comment-details}}
    {{/each}}
</section>
<section class="card m-2">
    <header class="d-flex justify-content-between align-items-center p-2 bg-body-secondary">
        <h3></h3>
        <p></p>
    </header>
    <form class="card-body comment-form">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea class="form-control" name="comment" id="text" rows="5" data-post-id="{{id}}"></textarea>
        </div>
        <div class="d-grid mb-3">
            <button type="button" class="btn btn-secondary">Submit</button>
        </div>
    </form>
</section>

<script src="/js/comment.js"></script>