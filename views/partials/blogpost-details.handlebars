<section class="card m-2">
    <a href="/blogpost/user/{{id}}">
        <header
            class="d-flex justify-content-between align-items-center p-2 bg-body-secondary"
          >
            <h3>{{title}}</h3>
            <p>Posted by {{user.name}} on {{format_date created_on}}</p>
        </header>
        <div class="card-body">{{text}}</div>
    </a>
</section>